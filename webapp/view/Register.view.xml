<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.untitledPrototype.controller.Register" xmlns="sap.m"
	xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.commons.layout">
	<Page showHeader="false" title="Page Title" showFooter="false" showNavButton="false" enableScrolling="false">
		<content>
			<layout:AbsoluteLayout horizontalScrolling="Hidden" verticalScrolling="Auto">
				<layout:positions>
					<layout:PositionContainer left="0px" top="0px">
						<layout:control>
							<Image src="/webapp/resources/HP3.jpg" height="539px" width="320px" visible="true" densityAware="false"/>
						</layout:control>
					</layout:PositionContainer>
					<layout:PositionContainer left="0px" top="16px">
						<layout:control>
							<form:Form width="100%" editable="true" visible="true">
								<form:title>
									<core:Title text="REGISTER" level="Auto"/>
								</form:title>
								<form:formContainers>
									<form:FormContainer visible="true">
										<form:formElements>
											<form:FormElement visible="true">
												<form:label>
													<Label text="EMAIL" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
												</form:label>
												<form:fields>
													<Input type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="false"
														valueStateText="Invalid entry" maxLength="0"/>
												</form:fields>
											</form:FormElement>
											<form:FormElement visible="true">
												<form:label>
													<Label text="PASSWORD" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
												</form:label>
												<form:fields>
													<Input type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="false"
														valueStateText="Invalid entry" maxLength="0"/>
												</form:fields>
											</form:FormElement>
											<form:FormElement visible="true">
												<form:label>
													<Label text="GENDER" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
												</form:label>
												<form:fields>
													<ComboBox editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%">
														<items>
															<core:Item text="MALE" enabled="true" key="MALE"/>
															<core:Item text="FEMALE" enabled="true" key="FEMALE"/>
															<core:Item text="OTHER" enabled="true" key="OTHER"/>
														</items>
													</ComboBox>
												</form:fields>
											</form:FormElement>
											<form:FormElement visible="true">
												<form:label>
													<Label text="AGE" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
												</form:label>
												<form:fields>
													<ComboBox editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%">
														<items>
															<core:Item text="0-20" enabled="true" key="0-20"/>
															<core:Item text="20-40" enabled="true" key="20-40"/>
															<core:Item text="40-60" enabled="true" key="40-60"/>
															<core:Item text="60 &amp; ABOVE" enabled="true" key="60 &amp; ABOVE"/>
														</items>
													</ComboBox>
												</form:fields>
											</form:FormElement>
										</form:formElements>
										<form:title/>
									</form:FormContainer>
								</form:formContainers>
								<form:layout>
									<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
								</form:layout>
							</form:Form>
						</layout:control>
					</layout:PositionContainer>
					<layout:PositionContainer left="120px" top="415px">
						<layout:control>
							<Button text="REGISTER" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
								press="_onButtonPress"/>
						</layout:control>
					</layout:PositionContainer>
					<layout:PositionContainer left="22px" top="463px">
						<layout:control>
							<Button text="LOGIN" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
								press="_onButtonPress1"/>
						</layout:control>
					</layout:PositionContainer>
				</layout:positions>
			</layout:AbsoluteLayout>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<ToolbarSpacer width=""/>
					<Button text="Save" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
					<Button text="Cancel" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
				</content>
			</OverflowToolbar>
		</footer>
		<headerContent/>
		<subHeader/>
		<customHeader/>
	</Page>
</mvc:View>